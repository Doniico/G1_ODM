package datamodel;
import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.Table;

/**
 * @since J2SE-1.8
 CREATE TABLE employee (
  id INT NOT NULL AUTO_INCREMENT,    
  name VARCHAR(30) NOT NULL,   
  age INT NOT NULL,    
  PRIMARY KEY (id));
 */
@Entity
@Table(name = "TechExerciseTableUppala")
public class Appointment {

   @Id
   @GeneratedValue(strategy = GenerationType.IDENTITY)
   @Column(name = "id")
   private Integer id;

   @Column(name = "title")
   private String title;

   @Column(name = "author")
   private String author;
   
   @Column(name = "yearPub")
   private Integer yearPub;
   
   @Column(name = "edition")
   private Integer edition;

   public BookUppala() {
   }

   public BookUppala(Integer id, String title, String author, 
		   int yearPub, int edition) {
      this.id = id;
      this.title = title;
      this.author = author;
      this.yearPub = yearPub;
      this.edition = edition;
   }

   public BookUppala(String title, String author, int yearPub, int edition) {
	   this.title = title;
      this.author = author;
      this.yearPub = yearPub;
      this.edition = edition;
   }

   public Integer getId() {
      return id;
   }

   public void setId(Integer id) {
      this.id = id;
   }

   public String getTitle() {
      return title;
   }

   public void setTitle(String title) {
      this.title = title;
   }

   public String getAuthor() {
      return author;
   }

   public void setAuthor(String author) {
      this.author = author;
   }
   
   public int getYearPub() {
	   return yearPub;
   }
   
   public void setYearPub(int year) {
	   this.yearPub = year;
   }
   
   public int getEdition() {
	   return edition;
   }
   
   public void setEdition(int edition) {
	   this.edition = edition;
   }
   

   @Override
   public String toString() {
      return "Book: " + this.id + ", " + this.title + ", " + this.author 
    		  + ", " + this.yearPub + ", " + this.edition;
   }
}